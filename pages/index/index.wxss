.scrollView {
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  /* justify-content: flex-start; */
  align-items: flex-start;
  background-color: white;
  padding: 0;
  box-sizing: border-box;
  /* 必须要  */
  white-space: nowrap; 
}
.item {
  display: inline-block;
  /* 父级设置这个属性,子元素会相对父级定位 */
  transform: translate(0,0);
  width: 50%;
  height: 160rpx;
  background-color: white;
}
.item-time {
  position: absolute;
  font-size: 11px;
  top: 20rpx;
  left: 20rpx;
}
.item-weather {
  position: absolute;
  font-size: 11px;
  bottom: 20rpx;
  left: 20rpx;
}
.item-temperature {
  position: absolute;
  font-size: 11px;
  top: 20rpx;
  right: 20rpx;
}
.item-line {
  position: absolute;
  width: 1px;
  top: 35rpx;
  bottom: 35rpx;
  /* right: 1px; */
  background-color: gainsboro;
}

